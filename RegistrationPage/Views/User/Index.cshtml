@model RegistrationPage.Models.CreateUser

@{
    ViewData["Title"] = "Index";
}

 <link rel="stylesheet" href="~/css/site.css" />
<h1>Register Here</h1>
<div class="body">
   <div class="row">
    <div class="col-md-4">
         <form asp-action="CreateUser" class="form" method="post">
            <span class="span"></span>
            <span class="span"></span>
            <span class="span"></span>
            <span class="span"></span>
            <div class="form-inner">
              <h2>Register</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="Id" class="form-control" />
            </div>
            <div class="content">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="top-input" placeholder="First name">
                           <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input type="text" class="top-input" placeholder="Last name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <input class="input" type="text" placeholder="Email" />
                     <span asp-validation-for="Email" class="text-danger"></span>

                    <input class="input" type="text" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input class="input" type="text" placeholder="Phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    <input class="input" type="text" placeholder="DOB" />
                    <span asp-validation-for="DOB" class="text-danger"></span>

                    <button class="btn">Register</button>
            </div>
           </div>
         </form>
        </div>
     </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

